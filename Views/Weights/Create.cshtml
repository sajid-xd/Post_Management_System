@model mycourier.Models.Weight

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div id="weightCard" class="card shadow-lg border-0 opacity-0 translate-middle-y">
        <div class="card-header text-white d-flex align-items-center"
             style="background:linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
            <i class="bi bi-box-seam fs-3 me-2"></i>
            <h4 class="mb-0 flex-grow-1">Create a New Weight</h4>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 fade"></div>

                <!-- Weight Name -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-tag-fill text-secondary"></i></span>
                    <input asp-for="Name" class="form-control cool-input" placeholder="Enter weight name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Weight Fee -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-currency-dollar text-secondary"></i></span>
                    <input asp-for="Fees" class="form-control cool-input" placeholder="Enter fee" />
                    <span asp-validation-for="Fees" class="text-danger small"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn text-white rounded-pill px-5 py-2 shadow-sm btn-hover"
                            style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
                        <i class="bi bi-plus-circle"></i> Create Weight
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Existing Weights List -->
    <div class="mt-5">
        <h4 class="mb-3 text-dark">Existing Weights</h4>
        <div class="table-responsive shadow-sm rounded">
            <table class="table align-middle mb-0">
                <thead style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%); color: #fff;">
                    <tr>
                        <th><i class="bi bi-tag-fill me-1"></i>Name</th>
                        <th><i class="bi bi-currency-dollar me-1"></i>Fees</th>
                        <th style="width: 180px;"><i class="bi bi-gear-fill me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var weight in ViewBag.WeightsList as List<mycourier.Models.Weight>)
                    {
                        <tr>
                            <td>@weight.Name</td>
                            <td>@weight.Fees.ToString("C")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Edit", "Weights", new { id = weight.Id })"
                                       class="btn btn-sm text-white"
                                       style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Weights", new { id = weight.Id })"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Are you sure you want to delete this weight?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Card fade/slide */
    .opacity-0 {
        opacity: 0;
    }

    .translate-middle-y {
        transform: translateY(30px);
    }

    #weightCard {
        transition: opacity .6s ease, transform .6s ease;
    }

    /* Inputs */
    .cool-input {
        border: none;
        box-shadow: 0 0 0 1px #ccc;
        border-radius: 0.375rem;
        transition: box-shadow .3s ease, transform .2s ease;
    }

        .cool-input:focus {
            box-shadow: 0 0 8px #ff8b00;
            transform: scale(1.02);
        }

    /* Buttons */
    .btn-hover {
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }

    /* Table */
    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(0,0,0,.05);
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: inherit;
    }

    .btn-sm {
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-sm:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const card = document.getElementById("weightCard");
        setTimeout(() => card.classList.remove("opacity-0", "translate-middle-y"), 50);
    });
</script>
