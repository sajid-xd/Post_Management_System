@model mycourier.Models.Weight

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create a New Weight</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Weight Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter weight name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Fees" class="form-label">Weight Fee</label>
                    <input asp-for="Fees" class="form-control" placeholder="Enter fee" />
                    <span asp-validation-for="Fees" class="text-danger small"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Weight
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="mb-3">Existing Weights</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Fees</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var weight in ViewBag.WeightsList as List<mycourier.Models.Weight>)
                    {
                        <tr>
                            <td>@weight.Name</td>
                            <td>@weight.Fees.ToString("C")</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <!-- Edit Button -->
                                    <a href="@Url.Action("Edit", "Weights", new { id = weight.Id })" class="btn btn-sm btn-outline-primary">Edit</a>

                                    <!-- Delete Button (with confirmation) -->
                                    <a href="@Url.Action("Delete", "Weights", new { id = weight.Id })" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this weight?')">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
