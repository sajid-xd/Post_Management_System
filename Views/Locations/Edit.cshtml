@model mycourier.Models.Location

@{
    ViewData["Title"] = "Edit Location";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5">
    <div id="locationCard" class="card shadow-lg border-0 opacity-0 translate-middle-y rounded-4">
        <div class="card-header text-white d-flex align-items-center"
             style="background:linear-gradient(135deg,#ff8b00 0%,#ffad33 100%); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            <i class="bi bi-geo-alt fs-3 me-2"></i>
            <h4 class="mb-0 flex-grow-1">Edit Location</h4>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 fade"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Location Name -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-card-text text-secondary"></i></span>
                    <input asp-for="Name" class="form-control cool-input" placeholder="Location Name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Location Fees -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-currency-dollar text-secondary"></i></span>
                    <input asp-for="Fees" class="form-control cool-input" placeholder="Location Fees" />
                    <span asp-validation-for="Fees" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn text-white rounded-pill px-5 py-2 shadow-sm btn-hover"
                            style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Fade & slide animation */
    .opacity-0 {
        opacity: 0;
    }

    .translate-middle-y {
        transform: translateY(30px);
    }

    #locationCard {
        transition: opacity .6s ease, transform .6s ease;
    }

    /* Inputs */
    .cool-input {
        border: none;
        box-shadow: 0 0 0 1px #ccc;
        border-radius: 0.375rem;
        transition: box-shadow .3s ease, transform .2s ease;
    }

        .cool-input:focus {
            box-shadow: 0 0 8px #ff8b00;
            transform: scale(1.02);
        }

    /* Button hover */
    .btn-hover {
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const card = document.getElementById("locationCard");
        setTimeout(() => card.classList.remove("opacity-0", "translate-middle-y"), 50);
    });
</script>
