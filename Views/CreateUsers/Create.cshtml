@model mycourier.Models.User

@{
    ViewData["Title"] = "Create User";

    var userTypeSession = Context.Session.GetString("user_type");
    bool isAgent = userTypeSession == "agent";
    Layout = isAgent ? "/Views/Shared/_LayoutAgent.cshtml" : "/Views/Shared/_LayoutAdmin.cshtml";

    List<mycourier.Models.User> usersToDisplay;
    if (ViewBag.Users != null)
    {
        usersToDisplay = (ViewBag.Users as List<mycourier.Models.User>)
            .Where(u => isAgent ? u.UserType == "user" : true)
            .ToList();
    }
    else
    {
        usersToDisplay = new List<mycourier.Models.User>();
    }
}

<div class="container py-5">
    <div id="createCard" class="card shadow-lg border-0 opacity-0 translate-middle-y">
        <div class="card-header text-white d-flex align-items-center"
             style="background:linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
            <i class="bi bi-person-plus fs-3 me-2"></i>
            <h4 class="mb-0 flex-grow-1">Create a New User</h4>
        </div>
        <div class="card-body bg-light">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <!-- Full Name -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-person-fill text-secondary"></i></span>
                    <input asp-for="FullName" class="form-control cool-input" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <!-- Username -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-person-badge text-secondary"></i></span>
                    <input asp-for="Username" class="form-control cool-input" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <!-- Password with toggle -->
                <div class="mb-3 input-group password-group">
                    <span class="input-group-text bg-white"><i class="bi bi-lock-fill text-secondary"></i></span>
                    <input asp-for="Password" type="password" id="passwordField" class="form-control cool-input" placeholder="Enter password" />
                    <button type="button" class="btn view-pass-btn no-hover" tabindex="-1">
                        <i class="bi bi-eye" id="toggleIcon"></i>
                    </button>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Phone -->
                <div class="mb-3 input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-telephone-fill text-secondary"></i></span>
                    <input asp-for="PhoneNumber" class="form-control cool-input" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <!-- User Type -->
                @if (isAgent)
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold">User Type</label>
                        <input type="text" class="form-control cool-input" value="User" readonly />
                        <input type="hidden" asp-for="UserType" value="user" />
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold">User Type</label>
                        <div class="dropdown w-100">
                            <input type="hidden" asp-for="UserType" id="UserTypeHidden" />
                            <button id="userTypeBtn"
                                    class="btn btn-outline-secondary w-100 d-flex justify-content-between align-items-center dropdown-toggle cool-input no-hover"
                                    type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="d-flex align-items-center">
                                    <i class="bi bi-people-fill me-2 text-secondary"></i>
                                    <span class="selected-text">-- Select Type --</span>
                                </span>
                            </button>
                            <ul class="dropdown-menu w-100 shadow">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center user-option" data-value="admin" href="#">
                                        <i class="bi bi-shield-lock me-2 text-danger"></i>Admin
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center user-option" data-value="agent" href="#">
                                        <i class="bi bi-truck me-2 text-warning"></i>Agent
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center user-option" data-value="user" href="#">
                                        <i class="bi bi-person me-2 text-primary"></i>User
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <span asp-validation-for="UserType" class="text-danger small"></span>
                    </div>
                }

                <div class="text-end">
                    <button type="submit" class="btn text-white rounded-pill px-5 py-2 shadow-sm btn-hover"
                            style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
                        <i class="bi bi-plus-circle"></i> Create User
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- User List -->
    <div class="mt-5">
        <h4 class="mb-3 text-dark">Existing Users</h4>
        <div class="table-responsive shadow-sm rounded">
            <table class="table align-middle mb-0">
                <thead style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%); color: #fff;">
                    <tr>
                        <th><i class="bi bi-person-fill me-1"></i> Full Name</th>
                        <th><i class="bi bi-person-badge me-1"></i> Username</th>
                        <th><i class="bi bi-telephone-fill me-1"></i> Phone Number</th>
                        <th><i class="bi bi-people-fill me-1"></i> User Type</th>
                        @if (!isAgent)
                        {
                            <th style="width: 180px;"><i class="bi bi-gear-fill me-1"></i> Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in usersToDisplay)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Username</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @if (user.UserType == "admin")
                                {
                                    <i class="bi bi-shield-lock text-danger me-1"></i>
                                    @user.UserType
                                }
                                else if (user.UserType == "agent")
                                {
                                    <i class="bi bi-truck text-warning me-1"></i>
                                    @user.UserType
                                }
                                else
                                {
                                    <i class="bi bi-person text-primary me-1"></i>
                                    @user.UserType
                                }
                            </td>
                            @if (!isAgent)
                            {
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@user.Id"
                                           class="btn btn-sm text-white"
                                           style="background: linear-gradient(135deg,#ff8b00 0%,#ffad33 100%);">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post"
                                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Card fade/slide */
    .opacity-0 {
        opacity: 0;
    }

    .translate-middle-y {
        transform: translateY(30px);
    }

    #createCard {
        transition: opacity .6s ease, transform .6s ease;
    }

    /* Inputs */
    .cool-input {
        border: none;
        box-shadow: 0 0 0 1px #ccc;
        border-radius: 0.375rem;
        transition: box-shadow .3s ease, transform .2s ease;
    }

        .cool-input:focus {
            box-shadow: 0 0 8px #ff8b00;
            transform: scale(1.02);
        }

    /* Password toggle */
    .password-group .form-control {
        border-right: none;
    }

    .view-pass-btn {
        background-color: #fff;
        border-left: none;
        border: 1px solid #ccc;
        border-radius: 0 0.375rem 0.375rem 0;
        width: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .view-pass-btn i {
            font-size: 1.2rem;
            color: #6c757d;
            transition: color .2s ease;
        }

        .view-pass-btn:focus {
            outline: none;
            box-shadow: 0 0 5px #ff8b00;
        }

    /* Buttons */
    .btn-hover {
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }

    /* Dropdown */
    .no-hover:hover, .no-hover:focus, .no-hover:active {
        background-color: inherit !important;
        color: inherit !important;
        box-shadow: none !important;
    }

    /* Table */
    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(0,0,0,.05);
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: inherit;
    }

    .btn-sm {
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-sm:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0,0,0,.15);
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Card animation
        const card = document.getElementById("createCard");
        setTimeout(() => card.classList.remove("opacity-0", "translate-middle-y"), 50);

        // User Type dropdown
        document.querySelectorAll(".user-option").forEach(function (opt) {
            opt.addEventListener("click", function (e) {
                e.preventDefault();
                const val = this.dataset.value;
                const txt = this.textContent.trim();
                document.getElementById("UserTypeHidden").value = val;
                document.querySelector("#userTypeBtn .selected-text").textContent = txt;
            });
        });

        // Password toggle
        const pwdField = document.getElementById("passwordField");
        const toggleBtn = document.querySelector(".view-pass-btn");
        const toggleIcon = document.getElementById("toggleIcon");
        if(toggleBtn){
            toggleBtn.addEventListener("click", function () {
                const isHidden = pwdField.type === "password";
                pwdField.type = isHidden ? "text" : "password";
                toggleIcon.classList.toggle("bi-eye");
                toggleIcon.classList.toggle("bi-eye-slash");
                toggleIcon.classList.toggle("text-courier");
            });
        }
    });
</script>
